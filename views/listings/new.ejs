<% layout("/layouts/boilerplate") -%>

    <br><br>
    <div class="row">
        <div class="col-8 offset-2">
            <h1>Create New Listing</h1>

            <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <!-- Title Input -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="listing[title]" placeholder="Enter title" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <!-- Description Input -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="listing[description]" placeholder="Add description"
                        class="form-control" rows="4" required></textarea>
                    <div class="valid-feedback">
                        Ok
                    </div>
                </div>

                <div class="row">
                    <!-- Price Input -->
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price (&#8377):</label>
                        <input type="number" id="price" name="listing[price]" placeholder="1200" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Please provide price.
                        </div>
                    </div>

                    <!-- Country Input -->
                    <div class="mb-3 col-md-8">
                        <label for="validationCustom04" class="form-label">Country</label>
                        <select class="form-select" name="listing[country]" id="validationCustom04" required>
                            <option selected disabled value="">Choose...</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a valid country.
                        </div>
                    </div>
                </div>


                <!-- Location Input -->
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" id="location" name="listing[location]" placeholder="Pune, Maharashtra"
                        class="form-control" required>
                    <div class="invalid-feedback">
                        Please provide a valid city.
                    </div>
                    <div class="invalid-feedback">
                        Please select a valid location.
                    </div>
                </div>


                <!-- Image URL Input -->
                <div class="mb-3">
                    <label for="imageURL" class="form-label">Upload Image :</label>
                    <input type="file" id="imageURL" name="listing[image]" 
                        class="form-control">

                </div>

                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                        <label class="form-check-label" for="invalidCheck">
                            Agree to terms and conditions
                        </label>
                        <div class="invalid-feedback">
                            You must agree before submitting.
                        </div>
                    </div>
                </div>
                <br><br>
                <!-- Submit Button -->
                <button class="btn btn-dark" type="submit">Add Listing</button>
            </form>
        </div>
    </div>
    <br>